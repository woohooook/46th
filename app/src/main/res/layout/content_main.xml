<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jx.ymc.a46th.MainActivity"
    tools:showIn="@layout/app_bar_main">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_1">
    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="@null"
        android:visibility="invisible"
        app:srcCompat="@android:drawable/ic_delete" />

    <ImageButton
    android:id="@+id/imageButton2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="0dp"
    android:background="@null"
    android:visibility="invisible"
    app:srcCompat="@android:drawable/ic_delete" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="@null"
        android:visibility="invisible"
        app:srcCompat="@android:drawable/ic_delete" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="@null"
        android:visibility="invisible"
        app:srcCompat="@android:drawable/ic_delete" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="@null"
        android:visibility="invisible"
        app:srcCompat="@android:drawable/ic_delete"
        />
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl_2"
        android:visibility="gone">
    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="@null"
        android:visibility="invisible"
        app:srcCompat="@android:drawable/ic_delete" />

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="@null"
        android:visibility="invisible"
        app:srcCompat="@android:drawable/ic_delete" />

    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="@null"
        android:visibility="invisible"
        app:srcCompat="@android:drawable/ic_delete" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rl_3">

        <Button
            android:id="@+id/Button_click_1"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:background="@drawable/button_color_change"
            android:text="右-外"
            android:textColor="#DFDFDD"
            android:textSize="14dp"
            android:visibility="visible"
            android:layout_alignParentBottom= "true"/>

        <Button
            android:id="@+id/Button_click_2"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:layout_above="@id/Button_click_1"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_color_change"
            android:text="右-中"
            android:textColor="#DFDFDD"
            android:textSize="14dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/Button_click_3"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:layout_above="@id/Button_click_2"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_color_change"
            android:text="机-身"
            android:textColor="#DFDFDD"
            android:textSize="14dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/Button_click_4"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:layout_above="@id/Button_click_3"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_color_change"
            android:text="左-中"
            android:textColor="#DFDFDD"
            android:textSize="14dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/Button_click_5"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:layout_above="@id/Button_click_4"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_color_change"
            android:text="左-外"
            android:textColor="#DFDFDD"
            android:textSize="14dp"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rl_4"
        android:visibility="gone">

    <Button
        android:id="@+id/Button_click_6"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:background="@drawable/button_color_change"
        android:text="右侧"
        android:textColor="#DFDFDD"
        android:textSize="14dp"
        android:visibility="visible"
        android:layout_alignParentBottom= "true"/>

    <Button
        android:id="@+id/Button_click_7"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_above="@id/Button_click_6"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_color_change"
        android:text="机-身"
        android:textColor="#DFDFDD"
        android:textSize="14dp"
        android:visibility="visible" />

    <Button
        android:id="@+id/Button_click_8"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_above="@id/Button_click_7"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_color_change"
        android:text="左侧"
        android:textColor="#DFDFDD"
        android:textSize="14dp"
        android:visibility="visible" />

    <Button
        android:id="@+id/Button_click_9"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_above="@id/Button_click_8"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_color_change"
        android:text="航-炮"
        android:textColor="#DFDFDD"
        android:textSize="14dp"
        android:visibility="visible" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
