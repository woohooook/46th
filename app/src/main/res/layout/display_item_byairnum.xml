<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    >
    <ImageView
        android:id="@+id/item_img"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_assistant_photo_red_24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_display_byairnum_1"
        android:layout_weight="1"
        android:textSize="16sp"
        android:textColor="@color/lightgray"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="16dp"
        android:textColor="@color/lightgray"
        android:text="号机"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_display_byairnum_2"
        android:layout_weight="1"
        android:textSize="16sp"
        android:textColor="@color/lightgray"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_display_byairnum_3"
        android:layout_weight="4"
        android:textSize="16sp"
        android:textColor="@color/lightgray"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_display_byairnum_4"
        android:layout_weight="2"
        android:textSize="16sp"
        android:textColor="@color/lightgray"
        />


</LinearLayout>