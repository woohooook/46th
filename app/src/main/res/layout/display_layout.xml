<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/barlayout_display"
        android:theme="@style/AppTheme.AppBarOverlay">
    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar_display"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:titleTextAppearance="@style/ToolbarTitle"
        android:background="#e08b90af"
        app:popupTheme="@style/ToolbarTheme">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_equipment_type"
                android:textSize="14sp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="#ffffff"/>
    </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listview_display"
        android:layout_below="@id/barlayout_display">

    </ListView>

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/fab_change_display"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_brush_black_24dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp"
        android:layout_marginRight="10dp"
        android:background="@null"
        app:fab_colorNormal="#B3B3B3"
        app:fab_colorPressed="#B3B3B3"
        app:fab_size="normal"
        app:menu_labels_ellipsize="end"
        app:menu_labels_singleLine="true"/>

</RelativeLayout>